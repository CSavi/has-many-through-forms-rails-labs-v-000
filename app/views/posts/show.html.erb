<h1>Title: <%= @post.title %></h1>

<h2>Content: <%= @post.content %></h2>

<h2>New Comment:</h2>

<ul>
  <% @post.users.each do |user| %>
  <li><%= user.username %> says: <%= user.content %></li>
  <% end %>
</ul>

<h2>Users: </h2>

<ul>
<% @post.users.uniq.each do |user| %>
  <li><%= link_to user.username, user_path(user) %></li>
<% end %>
</ul>

<h2>New Comment:</h2>

<%= form_for @post.comment do |c| %>
  <%= c.hidden_field :post_id, :value => @post.id %>
  <%= c.label "Content" %>
  <%= c.text_area :content %>

  <%= c.collection_select :user_id, Users.all, :id, :username, include_blank: 'Choose a user' %>


  <%= c.fields_for :users, c.users.build do |user_fields| %>
    <%= user_fields.text_field :username %>
  <% end %>

  <% c.submit %>

<% end %>
